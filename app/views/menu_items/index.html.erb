<%- model_class = MenuItem -%>
<div class="page-header">
  <h1><%= "#{@menu.name} - #{t('.title', :default => model_class.model_name.human.pluralize.titleize)}" %></h1>
</div>

<%= link_to 'Back to the menu', menu_path(@menu), class: 'btn btn-default' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.name %></td>
        <td><%= menu_item.description %></td>
        <td><%= number_to_currency(menu_item.price) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      menu_item_path(menu_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_menu_item_path(menu_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      menu_item_path(menu_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_menu_menu_item_path(@menu),
            :class => 'btn btn-primary' %>
