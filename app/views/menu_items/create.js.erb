console.log('create.js called!')

<% if @menu_item.errors.any? %>

  <% @menu_item.errors.each do |attribute, error| %>
    console.log('Error: <%= @menu_item.errors.full_message(attribute, error) %>');
  <% end %>
  $('#new_menu_item').find('.form-group:first').addClass('has-error');

<% else %>

  var $form = $('#new_menu_item');
  $form.find('.has-error').removeClass('has-error');
  $form.trigger('reset');
  $form.find('#menu_item_name').blur();
  $form.find('#menu_item_price').blur();
  $form.find('#menu_item_description').blur();

  $('#menu_items').append('<%= j render(partial: 'menu_items/menu_item', locals: { menu_item: @menu_item }) %>');

<% end %>